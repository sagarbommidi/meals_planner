<div class="modal overlay" role="dialog"  id="addSubscription" aria-labelledby="myModalLabel" style="display: none;">

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"> Subscribe for next month </h3>
  </div>
  <%= form_for @subscription, :html => {:method => :post, :class => "form-horizontal modal-form", :remote => true} do |f| %>
  <div class="modal-body">
    <p> Subscription Month <%= @s_type.month %></p> 
    <p> Total Amount </p>
  
  </div>
  <div class="modal-footer">
