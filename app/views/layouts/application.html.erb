<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Meals Subscription" %></title>
    <link rel="shortcut icon" href="/favicon.icon" />
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag :defaults %> 
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="main" role="main">
      <div class="container">
        
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <% if user_signed_in? %>
                <div class="navbar-search pull-right">  
                  <%= link_to "Home", user_path %> | 
                  <%= link_to('My Active Subscriptions','#') %> |
                  <%= link_to('Subscribe Now','#') %> |
                  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                </div>
              <% elsif admin_signed_in? %>
                <row>
                  <ul class="nav nav-pills">
                    <li class="<%= params[:controller].eql?('subscription_types') ? '' : 'active' %>">
                      <%= link_to 'Home', admins_path() %>
                    </li>
                    <li class="<%= params[:controller].eql?('subscription_types') ? 'active' : '' %>">
                      <%= link_to 'Subscription Types', subscription_types_path() %>
                    </li>
                    <li class='pull-right'>
                      <%= link_to 'Logout', destroy_admin_session_path, :method => :delete %>
                    </li>
                  </ul>
                </row>
              <% end %> 
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
          <%= yield :popup %>
        </div>
      </div> 
    </div> 
  </body>
</html>