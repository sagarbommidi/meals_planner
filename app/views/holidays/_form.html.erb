<div class="modal overlay" id="addHoliday" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 id="myModalLabel">Add Holiday</h3>
  </div>
  <%= form_for @holiday, :html => {:method => :post, :class => "form-horizontal modal-form", :remote => true} do |f| %>    
    <div class="modal-body">
      <div class="alert" id="holiday-errors" style="display: none;">
          
      </div>
      
      <div class="control-group">
        <%= f.label :date, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :date, :class => "date-field uneditable-input", :placeholder => "DD/MM/YYYY" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, "Description", :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :description, :placeholder => "Description" %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Add Holiday", :class => "btn btn-primary", :id => "add-holiday-btn" %>
    </div>
  <% end %>
</div>