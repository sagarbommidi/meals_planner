
<div style = "float:right">
	<%= link_to 'Back', root_path %>
</div>
<h2>Sign in</h2>
<h5> Please enter your LDAP credentials </h5>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		


  <div><%= f.label :login ,"Username"%><br />
  <%= f.text_field :login , :placeholder => "Enter your LDAP username"%></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :placeholder => "Enter your LDAP password" %></div>

  <div><%= f.submit "Sign in" %> </div>
<% end %>
<%= render "devise/shared/links" %>
