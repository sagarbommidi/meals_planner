<% unless current_user.transfered_today_meal? %>
  <%= form_tag transfers_path(), :method => :post, :class => "form-horizontal modal-form", :remote => true do %>
      <%= hidden_field_tag :subscription_id, current_user.current_subscription.id %>
      <%= hidden_field_tag :lender_id, current_user.id %>
      <%= hidden_field_tag :date, Date.today %>
      <%= submit_tag "Transfer Today's Meal", :id => "transfer-button" ,:class => "btn btn-success", :confirm => "Are you sure you want to transfer your meal?" %> 
  <% end %>
<% end  %>


