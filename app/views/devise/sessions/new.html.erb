<h1 align = "center" > Welcome to the Meals Planner </h1>
<h4>Sign in</h4>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div>  <%= f.text_field :login , :placeholder => "Enter your LDAP username"%></div>
  <div>  <%= f.password_field :password, :placeholder => "Enter your LDAP password" %></div>
  <div > <%= f.submit "Sign in" ,:class => "btn btn-success" %></div>
<% end %>
