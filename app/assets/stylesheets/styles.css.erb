.modal-form {
  margin: 0px;
}

.uneditable-input {
  cursor: pointer;
}

#holiday-container table td{
  width: 310px;
}

#holiday-container table input[type=text] {
  width: 200px;
}

#stype-container table input[type=text] {
  width: 150px;
}

.help-icon {
  padding-bottom: 15px;
}

#signin-box {
  margin-top: 17%;
  margin-left: 30%;
}

#login-box {
  background-color: whitesmoke;
  border-radius: 5px;
  border: 2px solid rgb(230, 225, 225);
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

#login-box h1 {
/*  border-bottom: 2px solid rgb(230, 225, 225);*/
padding-top: 10px;
}

#login-box input[type="text"], input[type="password"] {
  width: 250px;
}

.form-signin {
  margin: 0 auto 20px;
  max-width: 300px;
  padding: 5px 29px 29px;
}

.icon-question-sign {
  color: rgb(160, 149, 149);
  vertical-align: text-top;
}

.stype-select-container {
  width: 132px;
}

.tooltip-inner {
  font-weight: bold;
  font-size: 12px;
}

.help-title {
  cursor: help;
  float: right;
  font-size: 12px;
  margin: 10px 35px 0 0;
}

.help-title:hover {
  text-decoration: none;
}